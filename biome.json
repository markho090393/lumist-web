{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": ["**/*.{js,jsx,mjs,cjs,ts,tsx,cts,mts,json,css,html,graphql}"],
    "ignoreUnknown": true,
    "maxSize": 1048576
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "includes": ["**/*.{js,jsx,mjs,cjs,ts,tsx,cts,mts,json,css,html,graphql}", "!**/*.d.ts"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "includes": ["**/*.{js,jsx,mjs,cjs,ts,tsx,cts,mts,css,graphql}", "!**/*.d.ts"],
    "rules": {
      "recommended": true,
      "nursery": {
        "recommended": false
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
